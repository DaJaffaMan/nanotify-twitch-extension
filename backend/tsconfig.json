{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "sourceMap": true,
    "moduleResolution": "node",
    "outDir": "dist",
    "baseUrl": ".",
    "lib": ["es2015"],
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*"
      ],
      "types": [
        "node"
      ],
      "typeRoots": [
        "node_modules/@types"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}